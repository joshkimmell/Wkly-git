{
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "baseUrl": "./",
    "paths": {       
      "@components/*": ["src/components/*"],
      "@context/*": ["src/context/*"],
      "@lib/*": ["src/lib/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@styles/*": ["src/styles/*"],
    },
    "target": "ESNext",
    // "target": "es2023",
    "lib": ["ES2023", "DOM", "DOM.Iterable", "ESNext"],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "skipLibCheck": true,
    
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [ "src/**/*", "vite.config.ts", "src/hooks", "src/lib", "backend/server.ts", "server", "src/components/Auth.tsx", "vite-env.d.ts", "Archive/WeeklyReview.tsx", "Archive/WeeklySummary.tsx", "Archive/groupAccomplishmentsByCategory.ts"],
  "exclude": ["node_modules"]
}